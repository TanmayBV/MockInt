# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for code and config files across the entire project
*.py         text eol=lf
*.js         text eol=lf
*.jsx        text eol=lf
*.ts         text eol=lf
*.tsx        text eol=lf
*.json       text eol=lf
*.html       text eol=lf
*.css        text eol=lf
*.md         text eol=lf
*.yml        text eol=lf
*.yaml       text eol=lf
*.env        text eol=lf
*.sh         text eol=lf
*.sql        text eol=lf
*.toml       text eol=lf
*.ini        text eol=lf
*.cfg        text eol=lf
*.xml        text eol=lf
.gitignore   text eol=lf

# Docker files
Dockerfile   text eol=lf
*.Dockerfile text eol=lf

# Jupyter Notebooks
*.ipynb      text eol=lf

# Binary files (do not normalize)
*.png        binary
*.jpg        binary
*.jpeg       binary
*.gif        binary
*.ico        binary
*.mp4        binary
*.webm       binary
*.pdf        binary

# Ignore built/bundled files and node modules
/frontend/build/**           binary
/frontend/dist/**            binary
/frontend/node_modules/**    binary

# Optional: also ignore compiled Python files
*.pyc        binary
__pycache__/** binary

# Optional: enforce line endings inside backend folder
/backend/**.py               text eol=lf
/backend/**.json             text eol=lf
/backend/**.yml              text eol=lf
/backend/**.yaml             text eol=lf
/backend/**.sql              text eol=lf
/backend/**.toml             text eol=lf
/backend/**.ini              text eol=lf
/backend/**.cfg              text eol=lf
